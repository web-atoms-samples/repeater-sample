{
    "compilerOptions": {
        "target": "es6",
        "module":"umd",
        "incremental": true,
        "sourceMap": true,
        "removeComments": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "downlevelIteration": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsx": "react",
        "jsxFactory": "XNode.create",
        "lib": [
            "es6",
            "dom"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "node_modules/**/*",
        "tests"
    ]
}